<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><%= group.name %>メンバーへのメール</h2>
      <!--send_mailアクションへparamsを渡したいだけ、createとかしないのでget-->
      <%= form_with url: group_send_mail_path(@group), method: :get do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :mail_title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
</div>