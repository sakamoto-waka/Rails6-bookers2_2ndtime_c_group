<tr>
  <td><%= image_tag group.get_group_image, size: '100x100' %></td>  
  <td><%= link_to group.name, group_path(group) %></td>
  <td><%= group.introduction %></td>
  <td><%= group.users.count %></td>
  <% if group.owner_id == current_user.id %>
    <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-success" %></td>
  <% elsif group.users.include(current_user) %>
    <td><%= link_to group_path(group), method: :delete, class: "btn btn-danger" %></td>
  <% else %>  
    <td><%= link_to group_join_path(group), class: "btn btn-success" %></td>
  <% end %>
</tr>